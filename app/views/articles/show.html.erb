<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<%= simple_form_for(@article) do |f| %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit %>
<% end %>

<%= cl_image_tag @article.photo.key, width: 400, heigth: 300, crop: :fill %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', root_path %>
